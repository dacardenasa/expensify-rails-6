<!-- Template to create or update item - It has its helper in helpers -->
<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Expense</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%= form_for @expense, remote: true do |f| %>
  <div class="modal-body">
    
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :type %>
        <%= f.select(:type, 
                     [['Purchase', 'Purchase'], ['Withdrawal', 'Withdrawal'], ['Transfer', 'Transfer'], ['Payment', 'Payment']], 
                     class: "form-control") %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :date %>
        <%= f.text_field :date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :concept %>
      <%= f.text_field :concept, class: "form-control" %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :category %>
        <%= f.select(:category, 
                     [['Restaurants', 'Restaurants'], ['Grocery', 'Grocery'], ['Services', 'Services'], ['Home', 'Home'], ['Educatión', 'Educatión']],
                     class: "form-control") %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :amount %>
        <%= f.number_field :amount, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>