<div class="container">

  <div class="row">
    <div class="alert alert-success hide" role="alert"></div>
    <!-- START FILTER'S ASIDE -->
    <div class="col-md-3">

      <!-- START PURCHASE & WITHDRAWAL FILTER-->
      <h4 class="filter-header">Transaction Type <span>Choose to filter</span></h4>
      <div class="list-group filter-type">
        <% @types.each do | key, value | %>
          <a href="#" class="list-group-item"><%= value %></a>
        <% end %>
        <!-- MORE TRANSACTION TYPES -->
      </div>
      <!-- END PURCHASE & WITHDRAWAL FILTER-->

      <!-- START CATEGORIES FILTER-->
      <h4 class="filter-header">Categoría <span>Selecciona para filtrar</span></h4>
      <div class="list-group filter-type">
        <% @categories.each do | key, value | %>
          <a href="#" class="list-group-item"><%= value %></a>
        <% end %>
        <!-- MORE CATEGORIES  -->
      </div>
      <!-- END CATEGORIES FILTER-->

    </div>
    <!-- END FILTER'S ASIDE -->

    <!-- START MAIN CONTENT -->
    <div class="col-md-9 index-data">

      <!-- START FILTER'S SUMMARY -->
      <div class="row" style="margin-top: 10px;">
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value">
          <% total = 0 %>
          <% @expenses.each do |expense| %>
            <% total += expense.amount %>
          <% end %>
          <%= number_to_currency(total) %>
          </div>
          <div class="summary-label">Total</div>
        </diV>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= @expenses.count %></div>
          <div class="summary-label">Transactions</div>
        </div>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_currency( total / @expenses.count ) %></div>
          <div class="summary-label">Average</div>
        </div>
      </div>
      <!-- END FILTER'S SUMMARY -->

      <!-- START NEW EXPENSE && DROPDOWN MONTHS -->
      <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
          <!-- START MODAL -->

          <%= link_to new_expense_path, class: "btn btn-success pull-left", remote: true, data: { toggle: 'modal', target: '#modal-articles' } do %>
            <%= content_tag( :span, '', class: 'glyphicon glyphicon-plus') %>
            New expense
          <% end %>

          <div class="modal hide fade" id="modal-articles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content"></div>
            </div>
          </div>

          <!-- END MODAL -->
          <h4 class="dropdown pull-right">
            <button type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown">January 2020 <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li role="presentation"><a href="#">February 2020</a></li>
              <li role="presentation"><a href="#">March 2020</a></li>
              <li role="presentation"><a href="#">April 2020</a></li>
              <li role="presentation"><a href="#">May 2020</a></li>
              <li role="presentation"><a href="#">June 2020</a></li>
              <!-- MORE MONTHS -->
            </ul>
          </h4>
        </div>
      </div>
      <!-- END NEW EXPENSE && DROPDOWN MONTHS -->

      <!-- START SHOW DATA FILTER -->
      <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th class="text-center">Día</th>
            <th>Concepto</th>
            <th class="text-right">Categoría</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody>

          <% @expenses.each do |expense| %>
            <tr id="<%= expense.id %>">
              <td class="date">
                <div class="day">
                  <%= expense.date.day %>
                </div>
                <div class="month">
                  <%= Date::ABBR_MONTHNAMES[expense.date.month] %>
                </div>
              </td>
              <td>
                <div>
                  <span class="type">
                    <%= expense.exp_type %>
                  </span>
                </div>
                <div>
                  <span class="concept">
                    <%= expense.concept %>
                  </span>
                </div>
              </td>
              <td class="category text-right">
                <%= expense.category %>
              </td>
              <td class="text-right" style="width: 170px;">
                <div class="amount">
                  <%= number_to_currency(expense.amount) %>
                </div>
                <div class="actions">

                  <%= link_to expense_path(expense), remote: true do %>
                    <%= content_tag( :span, '', class: 'glyphicon glyphicon-edit') %>
                    Edit
                  <% end %>

                  <%= link_to expense_path(expense), remote: true, method: :delete, data: { confirm: "Are you sure you want to delete" } do %>
                    <%= content_tag( :span, '', class: 'glyphicon glyphicon-trash') %>
                    Delete
                  <% end %>

                </div>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
      <!-- START SHOW DATA FILTER -->

    </div>
    <!-- END MAIN CONTENT -->
    
  </div>
</div>
